<%- include('../partials/dashboard-header', { 
    title: 'Dashboard', 
    user: user 
}) %>

<div class="page-container">
    <h1>Admin Dashboard</h1>
    <p>Welcome to the admin panel. You can manage site users from here.</p>

    <% if (users && users.length > 0) { %>
        <div class="user-table-container">
            <h3>Manage Users</h3>
            <table class="user-table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Role</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% users.forEach(u => { %>
                        <tr>
                            <td><%= u.id %></td>
                            <td><%= u.name %></td>
                            <td><%= u.email %></td>
                            <td>
                                <span class="role-badge role-<%= u.type %>">
                                    <%= u.type %>
                                </span>
                            </td>
                            
                            <td class="actions-cell">
                                
                                <form action="/dashboard/users/update-role/<%= u.id %>" method="POST" class="user-action-form">
                                    <select name="type" <% if (user.id === u.id) { %>disabled<% } %>>
                                        <option value="user" <%= u.type === 'user' ? 'selected' : '' %>>User</option>
                                        <option value="admin" <%= u.type === 'admin' ? 'selected' : '' %>>Admin</option>
                                    </select>
                                    <button type="submit" class="btn-action edit" <% if (user.id === u.id) { %>disabled<% } %>>Update</button>
                                </form>
                                
                                <form action="/dashboard/users/delete/<%= u.id %>" method="POST" class="user-action-form" onsubmit="return confirm('Are you sure you want to delete this user?');">
                                    <button type="submit" class="btn-action delete" <% if (user.id === u.id) { %>disabled<% } %>>Delete</button>
                                </form>

                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    <% } else { %>
        <p>No users found in the database.</p>
    <% } %>

</div>

<%- include('../partials/footer') %>