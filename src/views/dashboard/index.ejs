<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <link rel="stylesheet" href="/css/dashboard-style.css">
</head>
<body>
    <%- include('../partials/dashboard-header') %>

    <main class="dashboard-container">
        <h2>User Management</h2>

        <table class="dashboard-table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Type</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% if (typeof users !== 'undefined' && users.length > 0) { %>
                    <% users.forEach(user => { %>
                        <tr>
                            <td><%= user.name %></td>
                            <td><%= user.email %></td>
                            <td><%= user.type %></td>
                            <td class="actions">
                                <a href="/dashboard/edit-user/<%= user.id %>" class="btn btn-modify">Modify</a>
                                
                                <form action="/dashboard/delete-user/<%= user.id %>" method="POST" class="delete-form">
                                    <button type="submit" class="btn btn-delete" onclick="return confirm('Are you sure you want to delete this user?');">Delete</button>
                                </form>
                            </td>
                        </tr>
                    <% }) %>
                <% } else { %>
                    <tr>
                        <td colspan="4" style="text-align: center;">No users found.</td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </main>

    
</body>
</html>
<%- include('../partials/footer') %>